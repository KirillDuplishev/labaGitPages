<script>
  const squares = document.querySelectorAll(".square");
  const singleRandomValue = () => Math.floor(Math.random() * 255);

  squares.forEach(
    (s) =>
      (s.style.borderColor = `rgb(${singleRandomValue()} ${singleRandomValue()} ${singleRandomValue()})`)
  );

</script>

